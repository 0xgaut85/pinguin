{
    "name": "pinion",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/3d-site",
        "packages/inner-site",
        "packages/api"
    ],
    "scripts": {
        "sequence": "node scripts/sequence/sequence_runner.js",
        "sequence:test": "node scripts/sequence/sequence_runner.js --max-sequences 1",
        "sequence:headed": "node scripts/sequence/sequence_runner.js --headed",
        "dev:3d": "npm run dev --workspace=packages/3d-site",
        "dev:inner": "npm run start --workspace=packages/inner-site",
        "dev:api": "npm run dev --workspace=packages/api",
        "build:3d": "npm run build --workspace=packages/3d-site",
        "build:inner": "npm run build --workspace=packages/inner-site",
        "build": "npm run build:inner && npm run build:3d",
        "start": "node server.js"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.39.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2"
    },
    "devDependencies": {
        "playwright": "^1.58.2",
        "sharp": "^0.34.5"
    }
}
